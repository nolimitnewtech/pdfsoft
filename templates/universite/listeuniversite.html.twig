{% extends 'base.html.twig' %} {% block content%}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Liste des universités <span style="margin-left: 10%;"> <a  class="btn btn-info"  style="color: white;" href="{{ path ('universite')}}"> Ajouter l'universite</a></span</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Liste des universités</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <h2>{{ lesuniversites|length }} Universités</b>
                    </h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for universite in lesuniversites %}
                            <tr>
                                <td>{{ universite.id }}</td>
                                <td>{{ universite.nom }}</td>
                                <td> <a href="{{ path('modifieruniversite',{id:universite.id}) }}"><button class="btn btn-primary"><i class="fas fa-edit"></i></button></a> &nbsp; &nbsp; <a href="{{ path('supprimeruniversite',{id:universite.id}) }}"><button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></a> </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
                <!-- /.invoice -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

{% endblock %}