{% extends 'base.html.twig' %} {% block content%}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="margin: auto">
                <h1>Modifier Cours</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Cours</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-6" style="margin: auto;">


                <!-- Main content -->
                <div class="invoice p-3 mb-3">

                    <span>{{ message }}</span>
                    <form method="Post" action="">
                        <div>Titre:<input class="form-control" type="text" name="titre" value="{{ cours.titre }}" /></div>
                        <div>Description:<input class="form-control" type="text" name="description" value="{{ cours.description }}" /></div>
                        <div style="margin-top: 5%"><input class="btn btn-primary" type="submit" name="valider" value="Valider" /></div>

                        <div style="display: flex;">
                            <div style="margin-top: 5%;"><a href="{{ path('download_file',{lien:cours.lien})}}"><button class="btn btn-primary"><i class="fas fa-download"></i> Telecharger</button></a> </div>
                            <div style="margin-top: 5%;  margin-left:5%;"><a class="btn btn-success" href=""><i class="fas fa-edit"></i>Changer le fichier pdf </a> </div>
                        </div>
                    </form>
                </div>
                <!-- /.invoice -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

{% endblock %}