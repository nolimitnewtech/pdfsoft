{% extends 'base.html.twig' %}
{% block content%}
   <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Modifier Cours</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Cours</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="callout callout-info">
              <h5><i class="fas fa-info"></i> Note:</h5>
             Cours.
            </div>


            <!-- Main content -->
            <div class="invoice p-3 mb-3">
            <span>{{ message }}</span>
            <form method="Post" action="">
           <div>Titre:<input type="text" name="titre"  value="{{ cours.titre }}"/></div>
            <div>Description:<input type="text" name="description" value="{{ cours.description }}"/></div>
             <div><input type="submit" name="valider" value="Valider" /></div>
             <div><a href="{{ path('download_file',{lien:cours.lien})}}">Telecharger</a> </div>
             <div><a href="">Changer le fichier pdf </a> </div>
             </form>
            </div>
            <!-- /.invoice -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>

    {% endblock %}