<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>PDF SOFT | Register student</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="{{ app.request.baseUrl }}/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="{{ app.request.baseUrl }}/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="{{ app.request.baseUrl }}/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href="{{ app.request.baseUrl }}"><b>PDF</b>SOFT Etudiant Inscription</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Etape 2: Information universitaire</p>

      <form action="{{ path('studentregister2') }}" method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
                        <label>Universite</label>
                        <select class="custom-select" required="" name="universite">
                        <option></option>
                        {% for universite in universites %}
                          <option value="{{ universite.id }}" {% if iduniversite == universite.id %} selected="selected" {% endif %}>{{ universite.nom }}</option>
                        {% endfor %}
                        </select>
        </div>
        <div class="form-group">
                        <label>Filiere</label>
                        <select class="custom-select" name="filiere">
                         <option></option>
                        {% for filiere in filieres %}
                          <option value="{{ filiere.id }}" {% if idfiliere == filiere.id %} selected="selected" {% endif %}>{{ filiere.nom }}</option>
                        {% endfor %}
                        </select>
        </div>

        <div class="form-group">
                        <label>Niveau</label>
                        <select class="custom-select" name="niveau">
                         <option></option>
                        {% for niveau in niveaux %}
                          <option value="{{ niveau.id }}" {% if idniveau == niveau.id %} selected="selected" {% endif %}>{{ niveau.nom }}</option>
                        {% endfor %}
                        </select>
        </div>
          
       
       <!-- <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="remember">
              <label for="remember">
                J'accepte les termes et conditions
              </label>
            </div>
          </div> -->
          <!-- /.col -->
          <div class="col-4">
           <a class="btn btn-primary btn-block" href="{{ path('studentregister') }}">< Etape 1 </a> &nbsp;
            <button type="submit" class="btn btn-primary btn-block">Etape 3 > </button>
          </div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
          <!-- /.col -->
        </div>
      </form>

      <div class="social-auth-links text-center mb-3">
      
      </div>
      <!-- /.social-auth-links -->

   <p class="mb-1">
        <a href="{{ path('studentlogin')}}">J'ai déjà un compte</a>
      </p>  
     
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="{{ app.request.baseUrl }}/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="{{ app.request.baseUrl }}/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="{{ app.request.baseUrl }}/dist/js/adminlte.min.js"></script>

</body>
</html>
