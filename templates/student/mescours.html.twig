{% extends 'basestudent.html.twig' %}
{% block content%}
   <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tableau de bord</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Mes cours</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="callout callout-info">
              <h5><i class="fas fa-info"></i> Note:</h5>
              Mes cours.
            </div>


            <!-- Main content -->
            <div class="invoice p-3 mb-3">
              <!-- title row -->
                        <h2><b>Mes cours</b></h2>
           
                        <h2>{{ cours|length }} Cours</b></h2>
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Date</th>
                      <th>Titre</th>
                      <th>Niveau</th>
                     <th>Filiere</th>
                      <th>Telecharger</th>
                    </tr>
                  </thead>
                  <tbody>
                   {% for cour in cours %}
                    <tr>
                      <td>{{ cour.id }}</td>
                       <td>{{ cour.titre }}</td>
                      <td>{{ cour.titre }}</td>
                       <td>{{ cour.niveau.nom }}</td>
                        <td>{{ cour.filiere.nom }}</td>
                         <td><a href="{{ path('download_file',{lien:cour.lien})}}">Telecharger</a>
                         </td>
                          </tr> 
                  {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
              
            </div>
            <!-- /.invoice -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>

    {% endblock %}